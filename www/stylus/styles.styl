@font-face
    font-family 'Material Icons'
    font-style normal
    font-weight 400
    src local('Material Icons'), local('MaterialIcons-Regular'), url(../fonts/material.woff2) format('woff2')

.material-icons
    font-family 'Material Icons'
    font-weight normal
    font-style normal
    font-size 24px
    line-height 1
    letter-spacing normal
    text-transform none
    display inline-block
    white-space nowrap
    word-wrap normal
    direction ltr
    -webkit-font-feature-settings 'liga'
    -webkit-font-smoothing antialiased

body
    background #f7f6f5

nav
    background #ff474d

.ebayLogo
    max-width 300px

img
    height 100px

.card
    .card-content
        padding 24px
        border-radius 0 0 2px 2px
        height 200px
        background #f0eeec
        .card-title
            display block
            line-height 32px
            margin-bottom 8px
            font-size 15px
    .card-reveal
        background-color #f0eeec
    .card-image
        img
            height 300px
    .card-action
        a
            &:not(.btn):not(.btn-large):not(.btn-large):not(.btn-floating)
                color #85b716

.btn
    background-color #e43137

.btn:active,
.btn:focus,
.btn:hover
    background-color #ff474d

input[type=search]
    text-align center

input[type=search]:focus
    &:not([readonly])
        border-bottom 1px solid #ff474d
        box-shadow 0 1px 0 0 #222

.e-blue
    color #0063d1

.e-red
    color #ff474d

.modal
    &.bottom-sheet
        max-height 100%
        height 100%
    .modal-footer
        bottom 0
        position absolute

::-webkit-scrollbar
    z-index 30
    width 8px
    height 0
    y-index hidden

::-webkit-scrollbar-track
    background-color #111

::-webkit-scrollbar-thumb
    background-color #2b2e33